<h1 class="text-center"> All Costs </h1>
<section>
<% @user_costs.each do |user_cost| %>
    <div class="text-center costs-section"> 
    <p> Name: <%= user_cost.name %> </p>
    <p> Amount: <%= user_cost.amount%> </p>
    <p> Date: <%= user_cost.created_at.day %>/<%= user_cost.created_at.month %>/<%= user_cost.created_at.year %> </p>
    </div>
<% end %>
<li class= "group-button d-flex justify-content-center"><%= link_to 'New Cost', new_cost_path %> </li>
</section>