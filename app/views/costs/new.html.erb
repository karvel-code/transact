<%= form_with(model: @cost, local: true) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :amount %>
    <%= f.number_field :amount, data: { numeric: true }, class: 'form-control', placeholder: "Enter Amount In Dollars Only Numbers " %>

    
    <%= f.select(:group_id, @group_options, {}) %>


    <%= f.submit "Add cost" %>
<% end %>